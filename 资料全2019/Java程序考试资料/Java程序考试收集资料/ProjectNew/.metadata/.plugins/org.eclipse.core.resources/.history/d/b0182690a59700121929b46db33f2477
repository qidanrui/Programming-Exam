     			frame.getGLCanvas().display();
            }
		   
		}
		else if(e.getSource()==frame.getUndoBtn())
		{
			StaticData.isAddLines=false;
			StaticData.isZoomIn=false;
			StaticData.isZoomOut=false;
			StaticData.isHandPan=false;
